# ===== AMBIENTE =====
NODE_ENV=production
PORT=3000

# ===== API BACKEND =====
NEXT_PUBLIC_API_URL=https://api.clickhype.com
NEXT_PUBLIC_API_VERSION=v1

# ===== DOMÍNIO E URLs =====
NEXT_PUBLIC_APP_URL=https://app.clickhype.com
NEXT_PUBLIC_APP_DOMAIN=clickhype.com

# ===== AUTENTICAÇÃO =====
NEXTAUTH_URL=https://app.clickhype.com
NEXTAUTH_SECRET=

# ===== FEATURES FLAGS =====
NEXT_PUBLIC_FEATURE_PROPOSALS=true
NEXT_PUBLIC_FEATURE_DASHBOARD=true
NEXT_PUBLIC_FEATURE_MONITORING=true

# ===== PWA =====
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_NAME=Click Hype Partners
NEXT_PUBLIC_PWA_SHORT_NAME=ClickHype
